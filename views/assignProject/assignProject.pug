extends ../layout-admin/layout-admin

block dashboardSidebar
          li.nav-item
              a(href='/account/dashboard')
                p Dashboard
          li.nav-section
            span.sidebar-mini-icon
              i.fa.fa-ellipsis-h
            h4.text-section Components
          block userSidebar
          li.nav-item
              a(href='/account/user')
               p Users
          block addUserSidebar
          li.nav-item
              a(href='/account/adduser')
               p Add User
          block projectSidebar
          li.nav-item
              a(href='/account/project')
               p Projects
          block addProjectSidebar
          li.nav-item
              a(href='/account/addproject')
                p Add Project
          block addAssignProjectSidebar
          li.nav-item.active
              a(href='/account/add_assign_project')
                p Assign Project
          block tracker
          li.nav-item
              a(href='/account/tracker')
                p Tracker
          block timesheet
          li.nav-item
              a(href='/account/timesheet')
                p Timesheet

block content
 .main-panel
    .container
        .page-inner
          .page-header
            h4.page-title Assign Projects
            ul.breadcrumbs
              li.nav-home
                a(href='forms.html#')
                i.flaticon-home
              li.separator
                i.flaticon-right-arrow
              li.nav-item
                a(href='forms.html#') Forms
              li.separator
                i.flaticon-right-arrow
              li.nav-item
                a(href='forms.html#') Basic Form
          .row
            .col-md-12
              .card
                .card-header
                  .card-title Fill Data
                .card-body
                  .row
                     .mx-auto.col-md-6.col-lg-4
                       form.addUserForm(action="/account/add_assign_project" method="POST")
                                .form-group
                                    label(for='addAssignProjectname') Project Name
                                    select#addAssignProjectname.form-control.form-control(name="project_id")
                                      each data in projectData
                                       option(value=data._id) #{data.name}
                                .form-group
                                    label(for='addAssignEmployeeName') Employee Name
                                    select#addAssignEmployeeName.form-control.form-control(name='employee_id')
                                      each data in employee
                                        option(value=data._id) #{data.name}
                                .form-group
                                    label(for='addAssignProjectDetail') Project Detail
                                    textarea#addAssignProjectDetail.form-control(name="details" rows='5' placeholder="Enter project details" required='')
                                .form-group
                                    label(for='addAssignDate') Assign Date
                                    input#addAssignDate.form-control(type='date' name='assign_date' placeholder='date' required='')

                                button.btn.btn-primary.btn-block.mt-4(type="submit") Submit
    footer.footer
      .container-fluid
        nav.pull-left
          ul.nav
            li.nav-item
              a.nav-link(href='https://www.themekita.com')
                | ThemeKita
            li.nav-item
              a.nav-link(href='index.html#')
                | Help
            li.nav-item
              a.nav-link(href='index.html#')
                | Licenses
        .copyright.ml-auto
          | 2018, made with
          i.fa.fa-heart.heart.text-danger
          |  by
          a(href='https://www.themekita.com') ThemeKita






