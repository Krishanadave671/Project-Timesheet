extends layout-admin

block content
  .pcoded-content
    .page-header.card
      .row.align-items-end
        .col-lg-8
          .page-header-title
            i.feather.icon-clipboard.bg-c-blue
            .d-inline
              h5 Add Deals
        .col-lg-4
          .page-header-breadcrumb
            ul.breadcrumb.breadcrumb-title
              li.breadcrumb-item
                a(href='/admin/dashboard')
                  i.feather.icon-home
              li.breadcrumb-item
                a(href='javascript:void(0)') Add Deals
    .pcoded-inner-content
      .main-body
        .page-wrapper
          .page-body
            .row
              .col-sm-12
                form(action='/admin/deal/add' method="POST" enctype='multipart/form-data')
                  .card
                    .card-header
                      h5 Add Deals
                    .card-block
                      .form-group.row
                        label.col-sm-2.col-form-label Select Image
                        .col-sm-10
                          input.form-control(type="file", name="image", accept="image/x-png,image/gif,image/jpeg" required)
                      .form-group.row
                        label.col-sm-2.col-form-label Action Link
                        .col-sm-10
                          select.js-example-basic-single.col-sm-12(name='action_store')
                            option(value="") -- Choose Part --
                            optgroup(label="All Stores")
                              each store in stores
                                option(value=`${store._id}|store`, id="store") #{store.name}
                            optgroup(label="Show tags with stores")
                              each tag in tags
                                option(value=`${tag._id}|tag`, id="tag") #{tag.name}
                      .form-group.row
                        label.col-sm-2.col-form-label Coupon Code
                        .col-sm-10
                          input.form-control(type="text", name="coupon", required)
                      .form-group.row
                        label.col-sm-2.col-form-label Expiry date
                        .col-sm-10
                          input.form-control.flatplace.flatpickr-input(type="text", name="expiry_date", data-id='datetime', placeholder="Select a date", required)
                      button.btn.waves-effect.waves-light.btn-primary.btn-block(type="submit" id="submit_btn")
                        i.icofont.icofont-user-alt-3
                        | Submit â†’

  block script.
    script(src="https://code.jquery.com/jquery-3.3.1.min.js", integrity='sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/flatpickr')

  script.
    var flatpickrOpt = {
      altInput: true,
      altFormat: "F j, Y",
      dateFormat: "Y-m-d",
      minDate: "today"
    };
    $( '.flatplace' ).flatpickr(flatpickrOpt);
