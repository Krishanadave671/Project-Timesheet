                            span.pcoded-micon
                              i.feather.icon-bookmark
                            span.pcoded-mtext Tags Section
                          ul.pcoded-submenu
                            li
                              a.waves-effect.waves-dark(href='/admin/tag/add')
                                span.pcoded-mtext Add Tag
                            li
                              a.waves-effect.waves-dark(href='/admin/tag/all')
                                span.pcoded-mtext View All Tag
                        li.pcoded-hasmenu
                          a.waves-effect.waves-dark(href='javascript:void(0)')
                            span.pcoded-micon
                              i.feather.icon-package
                            span.pcoded-mtext Donate Section
                          ul.pcoded-submenu
                            li
                              a.waves-effect.waves-dark(href='/admin/donate/add')
                                span.pcoded-mtext Add Cause
                            li
