    script.
      $('.dropify').dropify({
        messages: {
          'default': 'Drag and drop a file here or click',
          'replace': 'Drag and drop or click to replace',
          'remove': 'Remove',
          'error': 'Something went wrong.'
        }
      });
      $('.flash-messages').delay(2100).hide('fast');