                                span.pcoded-mtext View All Deals
                        li.pcoded-hasmenu
                          a.waves-effect.waves-dark(href='javascript:void(0)')
                            span.pcoded-micon
                              i.feather.icon-box
                            span.pcoded-mtext Story section
                          ul.pcoded-submenu
                            li
                              a.waves-effect.waves-dark(href='/admin/story/add')
                                span.pcoded-mtext Add Story
                            li
                              a.waves-effect.waves-dark(href='/admin/story/all')
                                span.pcoded-mtext View All Stories
                        li.pcoded-hasmenu
                          a.waves-effect.waves-dark(href='javascript:void(0)')
                            span.pcoded-micon
                              i.feather.icon-play
                            span.pcoded-mtext Video section
