                          ul.pcoded-submenu
                            li.pcoded-hasmenu
                              a.waves-effect.waves-dark(href='javascript:void(0)')
                                span.pcoded-micon
                                  i.feather.icon-bookmark
                                span.pcoded-mtext Home Banners
                              ul.pcoded-submenu
                                li
                                  a.waves-effect.waves-dark(href='/admin/banner/add')
                                    span.pcoded-mtext Add Banners
                                li
                                  a.waves-effect.waves-dark(href='/admin/banner/all')
                                    span.pcoded-mtext View Banners
                            li
                              a.waves-effect.waves-dark(href='/admin/favourite/add')
                                span.pcoded-mtext Favourite Screen
                            li
