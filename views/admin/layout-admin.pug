                          a.waves-effect.waves-dark(href='javascript:void(0)')
                            span.pcoded-micon
                              i.feather.icon-sidebar
                            span.pcoded-mtext Stores Section
                          ul.pcoded-submenu
                            li
                              a.waves-effect.waves-dark(href='/admin/store/add')
                                span.pcoded-mtext Add Store
                            li
                              a.waves-effect.waves-dark(href='/admin/store/all')
                                span.pcoded-mtext View All Store
                            li
