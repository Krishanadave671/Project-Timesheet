  body
    block header
      .loader-bg
        .loader-bar
      #pcoded.pcoded
        .pcoded-overlay-box
        .pcoded-container.navbar-wrapper
          nav.navbar.header-navbar.pcoded-header
            .navbar-wrapper
              .navbar-logo
                a(href='/admin/dashboard')
                  img.img-fluid(src='/admin/assets/images/logo.png', alt='logo', width=50, style="border-radius:30px")
                a#mobile-collapse.mobile-menu(href='sample-page.html#!')
                  i.feather.icon-menu.icon-toggle-right
                a.mobile-options.waves-effect.waves-light
                  i.feather.icon-more-horizontal
              .navbar-container.container-fluid
                ul.nav-left
                  li.header-search
                    .main-search.morphsearch-search
                      .input-group
                        span.input-group-prepend.search-close
                          i.feather.icon-x.input-group-text
                        input.form-control(type='text', placeholder='Enter Keyword')
                        span.input-group-append.search-btn
                          i.feather.icon-search.input-group-text
                ul.nav-right
                  li.user-profile.header-notification
                    .dropdown-primary.dropdown
                      .dropdown-toggle(data-toggle='dropdown')
                        //- img.img-radius(src='/assets/images/avatar-4.jpg', alt='User-Profile-Image')
                        span Hi, #{session.user.name.split(" ").slice(0, 1).join(' ')}
                        i.feather.icon-chevron-down
                      ul.show-notification.profile-notification.dropdown-menu(data-dropdown-in='fadeIn', data-dropdown-out='fadeOut')
                        li
                          a(href='/admin/logout')
                            i.feather.icon-log-out
                            | Logout
          .pcoded-main-container
            .pcoded-wrapper
              nav.pcoded-navbar
                .nav-list
                  .pcoded-inner-navbar.main-menu
                    .pcoded-navigation-label Navigation
                    ul.pcoded-item.pcoded-left-item
                      li
                        a.waves-effect.waves-dark(href='/admin/dashboard')
                          span.pcoded-micon
                            i.feather.icon-home
                          span.pcoded-mtext Dashboard
                        li.pcoded-hasmenu
                          a.waves-effect.waves-dark(href='javascript:void(0)')
                            span.pcoded-micon
                              i.feather.icon-users
                            span.pcoded-mtext Users Section
                          ul.pcoded-submenu
                            li
                              a.waves-effect.waves-dark(href='/admin/user/all')
                                span.pcoded-mtext View All Users
                            li
                              a.waves-effect.waves-dark(href='/admin/user/add')
                                span.pcoded-mtext Add Users
                        li.pcoded-hasmenu
                          a.waves-effect.waves-dark(href='javascript:void(0)')
                            span.pcoded-micon
                              i.feather.icon-pocket
                            span.pcoded-mtext Feeds Section
                          ul.pcoded-submenu
                            li
                              a.waves-effect.waves-dark(href='/admin/feed/add')
                                span.pcoded-mtext Add Feeds
                            li
                              a.waves-effect.waves-dark(href='/admin/feed/all')
                                span.pcoded-mtext View All Feeds
                        li.pcoded-hasmenu
