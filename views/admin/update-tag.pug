extends layout-admin

block content
  //- p= h.dump(tag)
  .pcoded-content
    .page-header.card
      .row.align-items-end
        .col-lg-8
          .page-header-title
            i.feather.icon-clipboard.bg-c-blue
            .d-inline
              h5 Update Tag
              //- span lorem ipsum dolor sit amet, consectetur adipisicing elit
        .col-lg-4
          .page-header-breadcrumb
            ul.breadcrumb.breadcrumb-title
              li.breadcrumb-item
                a(href='/admin/dashboard')
                  i.feather.icon-home
              li.breadcrumb-item
                a(href='javascript:void(0)') Update Tag
    .pcoded-inner-content
      .main-body
        .page-wrapper
          .page-body
            .row
              .col-sm-12
                .card
                  .card-header
                    h5 Update Tag
                  .card-block
                    form(action=`/admin/tag/update/${tag._id}` method="POST" enctype="multipart/form-data")
                      .form-group.row
                        label.col-sm-2.col-form-label Name
                        .col-sm-10
                          input.form-control(type='text' name="name" value=tag.name required)
                      .form-group.row
                        label.col-sm-2.col-form-label Code
                        .col-sm-10
                          input.form-control(type='text' name="code" value=tag.code)
                      .form-group.row
                        label.col-sm-2.col-form-label Icon
                        .col-sm-10
                          input.form-control(type='file' name="icon", accept="image/x-png,image/gif,image/jpeg")
                      .form-group.row
                        label.col-sm-2.col-form-label Preview
                        .col-sm-10
                          img(src=`${tag.icon}`, alt="", srcset="")
                      .form-group.row
                        label.col-sm-2.col-form-label Description
                        .col-sm-10
                          textarea.form-control(name="desc", cols="30", rows="10")= tag.desc
                      .form-group.row
                        label.col-sm-2.col-form-label Nearby
                        .col-sm-10
                          select.form-control(name='nearby')
                            option(value=1 selected=(tag.nearby == 1 ? "selected" : null)) Yes
                            option(value=0 selected=(tag.nearby == 0 ? "selected" : null)) No
                      .form-group.row
                        label.col-sm-2.col-form-label Status
                        .col-sm-10
                          select.form-control(name='status')
                            if tag.status == 'active'
                              option(value='active' selected) Active
                              option(value='inactive') Inactive
                            else if tag.status == 'inactive'
                              option(value='active') Active
                              option(value='inactive' selected) Inactive
                      button.btn.waves-effect.waves-light.btn-primary.btn-block(type="submit")
                        i.icofont.icofont-user-alt-3
