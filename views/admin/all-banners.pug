extends layout-admin

block content
  //- p= h.dump(feeds)
  .pcoded-content
    .page-header.card
      .row.align-items-end
        .col-lg-8
          .page-header-title
            i.feather.icon-clipboard.bg-c-blue
            .d-inline
              h5 View All Banners
              //- span lorem ipsum dolor sit amet, consectetur adipisicing elit
        .col-lg-4
          .page-header-breadcrumb
            ul.breadcrumb.breadcrumb-title
              li.breadcrumb-item
                a(href='/admin/dashboard')
                  i.feather.icon-home
              li.breadcrumb-item
                a(href='javascript:void(0)') View All Banners
    .pcoded-inner-content
      .main-body
        .page-wrapper
          .page-body
            .row
              .col-sm-12
                .card
                  .card-header
                    h5 View All Banners
                  .card-block
                    .table-responsive
                      table.table.table-sm
                        thead
                          tr
                            th Image
                            th Status
                            th Action
                        each banner in banners
                          tbody
                            tr
                              td
                                if banner.image
                                  .media-left.photo-table
                                    a(href='javascript:void(0)')
                                      img.media-object(src=`${banner.image}`)
                                else
                                  .media-left.photo-table
                                    a(href='javascript:void(0)')
                                      img.media-object.img-radius(src="/uploads/profile/user-demo.png")
                              td
                                if banner.status == 'active'
                                  label.label.label-success Active
                                else if banner.status == 'inactive'
                                  label.label.label-danger Inactive
                              td
                                a(href=`/admin/banner/edit/${banner._id}`)
                                  | Edit